<div class="articles">
    <div>
        <h1>Articles</h1>
        <%= link_to "New Article", new_article_path %>
    </div>
    <div class="articles__list">
        <% @articles.each do |article| %>
            <div class="articles__item">
                <div class="articles__item-header">
                    <h3><%= article.title %></h3>
                    <%= link_to "Details", article %>
                </div>
                <p><%= article.body %></p>
            </div>
        <% end %>
    </div>
    <p>Copyright 2021</p>
</div>
